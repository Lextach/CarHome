doctype html
html(lang="uk")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Додати автомобіль
    link(rel="stylesheet" href="/css/add-car.css")
  body
    .form-container
      h2 Додати автомобіль
      form(action="/admin-panel/add-car" method="POST")
        .input-group
          label(for="brand_name") Марка:
          input(type="text" id="brand_name" name="brand_name" placeholder="Наприклад: Toyota" required)

        .input-group
          label(for="model_name") Модель:
          input(type="text" id="model_name" name="model_name" placeholder="Наприклад: Camry" required)

        .input-group
          label(for="body_type_id") Тип кузова (ID):
          input(type="number" id="body_type_id" name="body_type_id" placeholder="ID типу кузова" required)

        .input-group
          label(for="engine_type_id") Тип двигуна (ID):
          input(type="number" id="engine_type_id" name="engine_type_id" placeholder="ID типу двигуна" required)

        .input-group
          label(for="drive_type_id") Тип приводу (ID):
          input(type="number" id="drive_type_id" name="drive_type_id" placeholder="ID типу приводу" required)

        .input-group
          label(for="engine_volume") Об'єм двигуна:
          input(type="number" step="0.1" id="engine_volume" name="engine_volume" placeholder="Наприклад: 2.5" required)

        .input-group
          label(for="color_name") Колір:
          input(type="text" id="color_name" name="color_name" placeholder="Наприклад: Чорний" required)

        .input-group
          label(for="release_year") Рік випуску:
          input(type="number" id="release_year" name="release_year" placeholder="2023" required)

        .input-group
          label(for="price") Ціна:
          input(type="number" id="price" name="price" placeholder="50000" required)

        .input-group
          label(for="photo") Фото (URL):
          input(type="url" id="photo" name="photo" placeholder="Введіть URL фото" required)

        .input-group
          label(for="status") Статус:
          select(id="status" name="status" required)
            option(value="available") Доступний
            option(value="on_order") Замовлено
            option(value="sold") Проданий

        button(type="submit") Додати автомобіль
